<section class="container-fluid">
  <div class="col-6 mx-auto d-flex align-items-center justify-content-center">
    <form action="/register" method="POST">
      <h1>Register</h1>
      <div class="form-group">
        <label for="name">First Name:</label>
        <input type="text" id="name" name="name" required class="form-control">
      </div>
      <div class="form-group">
        <label for="name">Last Name:</label>
        <input type="text" id="name" name="name" required class="form-control">
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required class="form-control">
      </div>
      <div class="form-group">
        <label for="password">Create Password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" pattern=".{8,}" title="Password must have at least 8 characters">
      </div>
      <div class="form-group">
        <label for="confirm_password">Confirm Password:</label>
        <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Password" oninput="checkPasswordMatch()">
      </div>
      <div class="form-group">
        <input type="submit" value="Register" class="btn btn-dark">
      </div>
    </form>
  </div>
</section>
<div id="message"></div>
<script>
  function checkPasswordMatch() {
    // Get the password inputs and the message element
    var password = document.getElementById("password");
    var confirm_password = document.getElementById("confirm_password");
    var message = document.getElementById("message");

    // Check if the passwords match
    if (password.value == confirm_password.value) {
      // If they match, set a green color and a success message
      confirm_password.style.backgroundColor = "#66cc66";
      message.style.color = "#66cc66";
      message.innerHTML = "Passwords match!";
    } else {
      // If they don't match, set a red color and an error message
      confirm_password.style.backgroundColor = "#ff6666" ;
      message.style.color = "#f2f2f2";
      message.innerHTML = "Passwords don't match!";
    }
  }
</script>


